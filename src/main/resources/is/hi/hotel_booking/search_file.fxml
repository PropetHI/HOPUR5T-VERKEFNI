<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="540.0" prefWidth="640.0" spacing="20.0" style="-fx-background-color: #daf4fe;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hellofx.HelloController">
    <padding>
        <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
    </padding>

    <Label text="List of avilable Hotels">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>
    <TableView fx:id="hotelTableView" prefHeight="400.0" prefWidth="487.0" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="nameColumn" minWidth="200" text="Name of hotel">
                <cellValueFactory>
                    <PropertyValueFactory property="name" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="roomsColumn" minWidth="100" text="Rooms">
                <cellValueFactory>
                    <PropertyValueFactory property="rooms" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="addressColumn" minWidth="200" text="Address">
                <cellValueFactory>
                    <PropertyValueFactory property="address" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>

    <HBox>
        <TextField fx:id="searchField" prefHeight="25.0" prefWidth="350.0" promptText="Search for hotel..." HBox.hgrow="ALWAYS">
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
            <HBox.margin>
                <Insets bottom="15.0" left="34.0" right="59.0" top="15.0" />
            </HBox.margin>
        </TextField>
        <Button minHeight="-Infinity" minWidth="-Infinity" onAction="#bookButtonClicked" prefHeight="25.0" prefWidth="98.0" text="Book Hotel">
            <opaqueInsets>
                <Insets left="53.0" />
            </opaqueInsets>
            <HBox.margin>
                <Insets bottom="15.0" right="78.0" top="15.0" />
            </HBox.margin>
        </Button>
    </HBox>
</VBox>